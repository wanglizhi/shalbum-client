<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@drawable/personal_background" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="21dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/albumcount"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" 
                        android:textColor="@color/white"
                        android:text="0" />
                   
                    <TextView
                        android:layout_width="wrap_content"
                		android:layout_height="0dip"
                		android:layout_weight="1"
                		android:layout_gravity="center_horizontal" 
                		android:textColor="@color/white"
                		android:text="照片" />
                </LinearLayout>

                  <LinearLayout
                    android:id="@+id/attention"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:orientation="vertical"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/followcount"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" 
                        android:textColor="@color/white"
                        android:text="0" />
                   
                    <TextView
                        android:layout_width="wrap_content"
                		android:layout_height="0dip"
                		android:layout_weight="1"
                		android:layout_gravity="center_horizontal" 
                		android:textColor="@color/white"
                		android:text="关注" />
                </LinearLayout>
                
                   <LinearLayout
                    android:id="@+id/fans"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fanscount"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" 
                        android:textColor="@color/white"
                        android:text="0" />
                   
                    <TextView
                        android:layout_width="wrap_content"
                		android:layout_height="0dip"
                		android:layout_weight="1"
                		android:layout_gravity="center_horizontal" 
                		android:textColor="@color/white"
                		android:text="粉丝" />
                </LinearLayout>
                
                    <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" 
                        android:textColor="@color/white"
                        android:text="0" />
                   
                    <TextView
                        android:layout_width="wrap_content"
                		android:layout_height="0dip"
                		android:layout_weight="1"
                		android:layout_gravity="center_horizontal" 
                		android:textColor="@color/white"
                		android:text="被赞" />
                </LinearLayout>
                 
            </LinearLayout>

            <com.app.helper.CircularImage
                android:id="@+id/cover_user_photo"
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                android:layout_above="@+id/linearLayout1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="37dp" />
            <TextView 
                android:id="@+id/signature_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"/>
        </RelativeLayout>
            
    </LinearLayout>
    
    
</ScrollView>