<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sharecard_content_title"
        style="@style/sharecard_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="61dp" />

    <LinearLayout
        android:id="@+id/sharecard_image_area_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="61dp" />

    <LinearLayout
        android:id="@+id/sharecard_image_area_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="61dp" />

    <TextView
        android:id="@+id/tv_published_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:layout_marginTop="8.0dip"
        android:drawablePadding="3dip"
        android:paddingLeft="61dp"
        android:textColor="#ff666666"
        android:textSize="12.0sp" />

    <LinearLayout
        android:id="@+id/sharecard_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/icon_thumbup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@drawable/icon_thumbup" />

            <TextView
                android:id="@+id/text_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="8pt" >
            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_star" />

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_share" />
    </LinearLayout>

</LinearLayout>