<?xml version="1.0" encoding="UTF-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item  android:state_pressed="false">
            <shape  
			    android:shape="oval"> 
			    <!-- 填充的颜色 --> 
			    <solid android:color="#35373f" /> 
			    <!-- 设置按钮的四个角为弧形 --> 
			    <!-- android:radius 弧形的半径 --> 
			    <corners android:radius="360dip" /> 
			     
				<!-- padding：Button里面的文字与Button边界的间隔 --> 
				<padding 
				   android:left="10dp" 
				   android:top="10dp" 
				   android:right="10dp" 
				   android:bottom="10dp" 
				/> 
			</shape>
		</item>
        <item  android:state_pressed="true">
            <shape  
			    android:shape="oval"> 
			    <!-- 填充的颜色 --> 
			    <solid android:color="#618146" /> 
			    <!-- 设置按钮的四个角为弧形 --> 
			    <!-- android:radius 弧形的半径 --> 
			    <corners android:radius="360dip" /> 
			     
				<!-- padding：Button里面的文字与Button边界的间隔 --> 
				<padding 
				   android:left="10dp" 
				   android:top="10dp" 
				   android:right="10dp" 
				   android:bottom="10dp" 
				/> 
			</shape>
        </item>
     
</selector>
